                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>-->

        
    </Window.Resources>

    <Grid>
        <DockPanel x:Name="stPan">
            <StackPanel
                Margin="10,5,0,0"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <TextBlock Margin="0,0,10,0" Text="Размер текста:" />
                <Button
                    Width="20"
                    Height="20"
                    Click="Button_Less_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </Button.Resources>
                    <fa:ImageAwesome
                        Width="15"
                        Height="15"
                        Margin="0,1,1,0"
                        Foreground="Black"
                        Icon="ArrowLeft" />
                </Button>
                <TextBox
                    Margin="8,0,8,0"
                    BorderThickness="0"
                    Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=FontSizeTable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Width="20"
                    Height="20"
                    Click="Button_More_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </Button.Resources>
                    <fa:ImageAwesome
                        Width="15"
                        Height="15"
                        Margin="0,1,1,0"
                        Foreground="Black"
                        Icon="ArrowRight" />
                </Button>
            </StackPanel>

            <GroupBox
                x:Name="grBox"
                Margin="5"
                DockPanel.Dock="Top"
                Header="Таблица">
                <DataGrid
                    Name="dgTable"
                    Margin="0"
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="True"
                    CanUserSortColumns="False"
                    ColumnWidth="auto"
                    DockPanel.Dock="Top"
                    FontSize="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=FontSizeTable, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalGridLinesBrush="#FFC8C8C8"
                    IsReadOnly="True"
                    ItemContainerStyle="{StaticResource ResourceKey=DataGridTextWrap}"
                    ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=dataTable}"
                    SelectionMode="Extended"
                    SelectionUnit="FullRow"
                    VerticalGridLinesBrush="#FFC9C9C9">
                    
