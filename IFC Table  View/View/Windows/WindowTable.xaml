<Window
    x:Class="IFC_Table_View.View.Windows.WindowTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:IFC_Table_View.ViewModels"
    Name="Win"
    Title="{Binding Path=TableName}"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">

    <Window.Resources>
        
        <Style x:Key="DataGridCellTextWrap" TargetType="{x:Type TextBlock}">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="DataGrid" x:Key="DataGridTextWrap">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGrid}">
                        <DataGrid ItemsSource="{TemplateBinding DataGrid.ItemsSource}">
                            <DataGrid.Columns>
                                <!--<DataGridTextColumn CellStyle="{StaticResource DataGridCellTextWrap}"/>-->
                            </DataGrid.Columns>
                        </DataGrid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <!--<DataTemplate x:Key="templ">
            <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="Black" />
        </DataTemplate>-->
